@model List<Quotation_Management.ViewModels.UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
    ViewData["Title"] = "EditUsersInRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditUsersInRole</h2>
<form method="post">
    <div class="card shadow mb-4">
        <!-- Card Header - Accordion -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Add/Remove User from this Role</h6>
        </div>
        <!-- Card Content - Collapse -->
        <div class="collapse show" id="collapseCardExample" style="">
            <div class="card-body">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />

                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label">@Model[i].UserName</label>
                    </div>
                }

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update" />
                    <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
